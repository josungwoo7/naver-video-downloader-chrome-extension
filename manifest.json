{
  "manifest_version": 3,
  "name": "네동줍줍 (Naver Video Downloader)",
  "version": "1.0.0",
  "description": "네이버 카페/블로그의 동영상을 쉽게 다운로드하세요",
  
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  
  "host_permissions": [
    "https://apis.naver.com/*",
    "https://cafe.naver.com/*",
    "https://blog.naver.com/*",
    "https://api.emailjs.com/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.emailjs.com;"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://cafe.naver.com/*",
        "https://blog.naver.com/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup-simple.html",
    "default_title": "네동줍줍",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 